<p id="notice"><%= notice %></p>

<h1>Images</h1>

<% @images.each do |image| %>
  <div>
    <%= image_tag "data:image/#{image.extension};base64,#{image.stream}" %>
    <p><%= image.description %></p>
    <p><strong>Uploaded by:</strong><%= User.find(image.uploaded_by_id).username %></p>
    <% if current_user && current_user == image.uploaded_by %>
      <%= link_to "change", edit_image_path(image) %>
      <%= link_to "delete", image_path(image), method: "delete"%>
    <% end %>

  </div>
<% end %>

<%= link_to 'New Image', new_image_path %>
